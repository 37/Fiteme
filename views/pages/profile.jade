extends ../partials/skeleton

block content

	if user
		.container.leftcolumn
			h3 Record
				.container.recordlist
					- var n = 0
					while n < 20
						p= n++ + " - win"
		.container.rightcolumn
			p
				a.btn.btn-primary(href="",id="settings") Settings
			img(src="http://#{host}", alt='Profile image')
			.container.achievementlist
				- var n = 0
				while n < 15
					p= n++ + " - combobreaker"
			p.settings "The settings are here"
	else
		.container
			h1  Wanna fite m8?
				p Log in first.
				p
					a.btn.btn-primary(href="/login") Login
				p
					span.small I don't have an account?
					span &nbsp;
					a.small(href="/register") Get 1337.

block scripts
$( "btn-primary" ).click(function() {
$( "#settings" ).slideToggle( "slow" );
});
