doctype html
html
	head
		title=title
		link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css')
		link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css')
		link(rel='stylesheet', href='/stylesheets/main.css')
		script(type='text/javascript', src='//code.jquery.com/jquery-2.1.4.min.js')
		script(type='text/javascript', src='//code.jquery.com/ui/1.11.4/jquery-ui.min.js')

	body
		#mainbody
			nav(class=['navbar', 'navbar-inverse'])
				div.container-fluid
					div.navbar-header
						button(class="navbar-toggle collapsed", type="button", data-toggle="collapse", data-target=".navbar-collapse", aria-expanded="false", aria-controls="navbar")
							span.sr-only Toggle navigation
							span.class.icon-bar
							span.class.icon-bar
							span.class.icon-bar
						a.navbar-brand(href="#") Fight!
					div(class="navbar-collapse collapse")
						ul(class=['navbar-right', 'navbar-nav', 'nav'])
							li
								a.navbar-icon(href="http://mekong.herokuapp.com/") Fight!
							li
								a.navbar-icon(href="/") Profile

			block content

		block scripts
		script(type='text/javascript').
			$(document).ready(function() {
				var container = document.getElementById('mainbody');
				var heightWindow = $(window).height();
				var heightContainer = $(container).height();

				$(mainbody).css({
					marginTop: ((heightWindow / 2) - (heightContainer / 2))
				});
			});
